<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="business_requirement_test" model="business.requirement">
        <field name="description">Test Business Requirement</field>
        <field name="responsible_id" ref="base.user_root"/>
        <field name="project_id" ref="business_requirement.project_1"/>
        <field name="priority">2</field>
        <field name="category_ids"
               eval="[(6, 0, [ref('business_requirement.business_requirement_category_1'),ref('business_requirement.business_requirement_category_3')])]"/>
        <field name="reviewer_ids"
               eval="[(6, 0, [ref('base.user_demo')])]"/>
        <field name="to_be_reviewed" eval="1"/>
        <field name="state">confirmed</field>
        <field name="partner_id" ref="base.res_partner_2"/>
    </record>

    <record id="business_requirement_deliverable_test"
                model="business.requirement.deliverable">
        <field name="business_requirement_id"
               ref="business_requirement_test"/>
        <field name="qty">21.0</field>
        <field name="sale_price_unit">5200.0</field>
        <field name="uom_id" ref="product.product_uom_hour"/>
        <field name="product_id" ref="product.product_product_5"/>
        <field name="name">ERP</field>
    </record>

    <record id="business_requirement_resource_test_1" model="business.requirement.resource">
        <field name="state">confirmed</field>
        <field name="business_requirement_id" ref="business_requirement_test"/>
        <field name="business_requirement_deliverable_id" ref="business_requirement_deliverable_test"/>
        <field name="resource_type">task</field>
        <field name="product_id" ref="product.product_product_1"/>
        <field name="name">SER01</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="qty">20</field>
        <field name="uom_id" ref="product.product_uom_hour"/>
    </record>

    <record id="business_requirement_resource_test_2" model="business.requirement.resource">
        <field name="state">confirmed</field>
        <field name="business_requirement_id" ref="business_requirement_test"/>
        <field name="business_requirement_deliverable_id" ref="business_requirement_deliverable_test"/>
        <field name="resource_type">task</field>
        <field name="product_id" ref="product.product_product_5"/>
        <field name="name">ERP</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="qty">18</field>
        <field name="uom_id" ref="product.product_uom_hour"/>
    </record>

    <record id="project_project_test" model="project.project">
        <field name="name">test project</field>
        <field name="business_requirement_id" ref="business_requirement_test"/>
    </record>

    <record id="project_task_test" model="project.task">
        <field name="name">ERP</field>
        <field name="project_id" ref="project_project_test"/>
        <field name="planned_hours">18</field>
        <field name="business_requirement_id" ref="business_requirement_test"/>
        <field name="timesheet_ids" eval="[(0, 0, {
        'name': 'building a module',
        'unit_amount': 2,
        'date': DateTime.today().strftime('%Y-%m-%d 00:00:00'),
        'account_id': ref('base.user_root')
        }),
        (0, 0, {
        'name': 'fix bug',
        'unit_amount': 2,
        'date': DateTime.today().strftime('%Y-%m-%d 00:00:00'),
        'account_id': ref('base.user_root')
        }),
        ]"/>
    </record>

    <record id="project_task_test_2" model="project.task">
        <field name="name">SER01</field>
        <field name="project_id" ref="project_project_test"/>
        <field name="planned_hours">20</field>
        <field name="business_requirement_id" ref="business_requirement_test"/>
        <field name="timesheet_ids" eval="[(0, 0, {
        'name': 'code review',
        'unit_amount': 3,
        'date': DateTime.today().strftime('%Y-%m-%d 00:00:00'),
        'account_id': ref('base.user_root')
        }),
        (0, 0, {
        'name': 'fix bug',
        'unit_amount': 4,
        'date': DateTime.today().strftime('%Y-%m-%d 00:00:00'),
        'account_id': ref('base.user_root')
        }),
        ]"/>
    </record>

</odoo>
